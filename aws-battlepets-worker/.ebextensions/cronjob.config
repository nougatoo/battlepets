files:
 "/etc/cron.d/mycron":
  mode: "000644"
  owner: root
  group: root
  content: |
   30 * * * * root /usr/local/bin/runGetAndParseAuctionDataUS.sh
 
 "/usr/local/bin/runGetAndParseAuctionDataUS.sh":
  mode: "000755"
  owner: root
  group: root
  content: |
   #!/bin/bash
 
   date > /tmp/date
   /usr/bin/php /var/app/current/scripts/getAndParseAuctionDataUS.php >> /home/ec2-user/getAndParseAuctionDataLogUS.txt
 
   exit 0
   
